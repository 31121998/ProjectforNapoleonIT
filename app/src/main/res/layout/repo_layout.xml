<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/repoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/comics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <Button
            android:onClick="firstComics"
            android:text="@string/first"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/first_button"
            app:layout_constraintEnd_toStartOf="@+id/prev_button"
            app:layout_constraintTop_toBottomOf="@+id/comics"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.927"/>
    <Button
            android:onClick="prevComics"
            android:text="@string/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prev_button"
            app:layout_constraintEnd_toStartOf="@+id/Random_button"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/comics" app:layout_constraintVertical_bias="0.925"/>
    <Button
            android:onClick="randComics"
            android:text="@string/random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Random_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comics" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.925"/>
    <Button
            android:onClick="nextComics"
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_button"
            app:layout_constraintTop_toBottomOf="@+id/comics" app:layout_constraintStart_toEndOf="@+id/Random_button"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.927"/>
    <Button
            android:onClick="lastComics"
            android:text="@string/Last"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/last_button"
            tools:ignore="OnClick"
            app:layout_constraintTop_toBottomOf="@+id/comics" app:layout_constraintStart_toEndOf="@+id/next_button"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.925"
    />
    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/repoName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>
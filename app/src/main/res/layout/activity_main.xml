<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/linearLayout"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/repoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>


    <com.jsibbold.zoomage.ZoomageView
            android:id="@+id/comics"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/my_zoomable_image"
            app:zoomage_restrictBounds="false"
            app:zoomage_animateOnReset="true"
            app:zoomage_autoResetMode="UNDER"
            app:zoomage_autoCenter="true"
            app:zoomage_zoomable="true"
            app:zoomage_translatable="true"
            app:zoomage_minScale="0.6"
            app:zoomage_maxScale="8"
            app:layout_constraintTop_toBottomOf="@+id/numView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintBottom_toTopOf="@+id/editText2"
            android:layout_marginBottom="8dp"/>
    <Button
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"
            android:onClick="firstComics"
            android:text="@string/first"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/first_button"
            app:layout_constraintEnd_toStartOf="@+id/prev_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"
            android:onClick="prevComics"
            android:text="@string/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prev_button"
            app:layout_constraintEnd_toStartOf="@+id/Random_button"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"
            android:onClick="randComics"
            android:text="@string/random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Random_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
    />
    <Button
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"
            android:onClick="nextComics"
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_button"
            app:layout_constraintStart_toEndOf="@+id/Random_button"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:textColor="@color/colorText"
            android:background="@color/colorPrimary"
            android:onClick="lastComics"
            android:text="@string/Last"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/last_button"
            tools:ignore="OnClick"
            app:layout_constraintStart_toEndOf="@+id/next_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/repoName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <EditText

            android:backgroundTint="@color/colorPrimary"
            android:textCursorDrawable="@color/colorPrimary"
            android:cursorVisible="false"
            android:maxLength="4"
            android:gravity="center_horizontal"
            android:onClick="selectComics"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/Random_button"
            android:includeFontPadding="true" android:hint="Введите номер комикса"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:onClick="addToFavorite"
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toStartOf="@+id/repoName" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/comics"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button

            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/repoName"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/comics"/>

</android.support.constraint.ConstraintLayout>